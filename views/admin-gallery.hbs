<head>
    <style>
        .admin-container {
            max-width: 1200px;
            margin: 8rem auto;
            padding: 2rem;
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 3rem;
        }

        .admin-header h1 {
            font-size: 3rem;
            color: white;
            font-family: 'Playfair Display', serif;
        }

        .members-table-container {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 24px;
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            text-align: left;
        }

        th {
            padding: 1.5rem 2rem;
            background: rgba(255, 255, 255, 0.03);
            color: rgba(255, 255, 255, 0.5);
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            font-weight: 600;
        }

        td {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
            vertical-align: middle;
        }

        tr:last-child td {
            border-bottom: none;
        }

        .member-info {
            display: flex;
            align-items: center;
            gap: 1.2rem;
        }

        .member-avatar {
            width: 48px;
            height: 48px;
            border-radius: 8px;
            object-fit: cover;
            border: 2px solid rgba(99, 102, 241, 0.2);
        }

        .member-details h4 {
            color: white;
            margin: 0;
            font-size: 1rem;
        }

        .delete-btn {
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
            border: 1px solid rgba(239, 68, 68, 0.2);
            padding: 0.6rem 1.2rem;
            border-radius: 12px;
            font-size: 0.85rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .delete-btn:hover {
            background: #ef4444;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(239, 68, 68, 0.3);
        }

        .empty-state {
            text-align: center;
            padding: 5rem;
            color: rgba(255, 255, 255, 0.3);
        }

        .upload-trigger {
            padding: 0.8rem 2rem;
            background: #6366f1;
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
        }

        .upload-trigger:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(99, 102, 241, 0.4);
        }

        /* Upload Modal */
        .upload-modal {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(20px);
            z-index: 3000;
            display: none;
            align-items: center;
            justify-content: center;
        }

        .upload-modal.active {
            display: flex;
        }

        .upload-form-container {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 3rem;
            border-radius: 30px;
            width: 90%;
            max-width: 500px;
        }

        .upload-form-container h2 {
            color: white;
            font-family: 'Playfair Display', serif;
            margin-bottom: 2rem;
            text-align: center;
        }
    </style>
</head>

<main style="background-color: #0c0c0e; min-height: 100vh; padding-bottom: 5rem;">
    <div class="admin-container">
        <div class="admin-header">
            <h1>Gallery Management</h1>
            <button class="upload-trigger" onclick="toggleUploadModal()">Upload artwork</button>
        </div>

        <div class="members-table-container">
            {{#if galleryItems.length}}
            <table>
                <thead>
                    <tr>
                        <th>Artwork</th>
                        <th>Title / Description</th>
                        <th>Uploaded Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each galleryItems}}
                    <tr>
                        <td>
                            <div class="member-info">
                                <img src="{{this.image}}" class="member-avatar">
                                <div class="member-details">
                                    <h4>Artifact #{{@index}}</h4>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div style="display: flex; flex-direction: column; gap: 0.4rem;">
                                <span style="color: white; font-weight: 600;">{{this.title}}</span>
                                <span
                                    style="font-size: 0.8rem; color: rgba(255, 255, 255, 0.4); max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{this.description}}</span>
                            </div>
                        </td>
                        <td>
                            <span style="color: rgba(255, 255, 255, 0.4); font-size: 0.9rem;">{{this.createdAt}}</span>
                        </td>
                        <td>
                            <form action="/admin/gallery/delete/{{this._id}}" method="POST"
                                onsubmit="return confirm('Are you sure you want to delete this artwork?');">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <div class="empty-state">
                <p>No gallery items found.</p>
            </div>
            {{/if}}
        </div>
    </div>
</main>

<div id="gallery-upload-modal" class="upload-modal">
    <div class="upload-form-container">
        <h2>Upload New Piece</h2>
        <form action="/gallery/upload" method="POST" enctype="multipart/form-data">
            <div class="form-group" style="margin-bottom: 2rem;">
                <label style="display: block; color: rgba(255,255,255,0.7); margin-bottom: 1.2rem;">Title</label>
                <input type="text" name="title" required
                    style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; color: white;">
            </div>
            <div class="form-group" style="margin-bottom: 2rem;">
                <label style="display: block; color: rgba(255,255,255,0.7); margin-bottom: 1.2rem;">Description</label>
                <textarea name="description" rows="3"
                    style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; color: white;"></textarea>
            </div>
            <div class="form-group" style="margin-bottom: 3rem;">
                <label style="display: block; color: rgba(255,255,255,0.7); margin-bottom: 1.2rem;">Image File</label>
                <input type="file" name="image" accept="image/*" required
                    style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; color: white;">
            </div>
            <div style="display: flex; gap: 1rem;">
                <button type="submit" class="delete-btn"
                    style="flex: 1; background: #6366f1; border-color: #6366f1; color: white; margin-top: 0;">Upload</button>
                <button type="button" onclick="toggleUploadModal()"
                    style="flex: 1; background: transparent; border: 1px solid rgba(255,255,255,0.1); color: white; border-radius: 12px; cursor: pointer;">Cancel</button>
            </div>
        </form>
    </div>
</div>

<script>
    function toggleUploadModal() {
        document.getElementById('gallery-upload-modal').classList.toggle('active');
    }
</script>