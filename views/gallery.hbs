<head>
    <style>
        .gallery-header-section {
            text-align: center;
            padding: 8rem 2rem 4rem;
        }

        .gallery-header-section h1 {
            font-size: 4rem;
            color: white;
            font-family: 'Playfair Display', serif;
            margin-bottom: 1rem;
        }

        .gallery-actions {
            margin-bottom: 4rem;
            display: flex;
            justify-content: center;
        }

        .upload-trigger {
            padding: 1rem 2.5rem;
            background: var(--accent-1);
            color: white;
            border: none;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
        }

        .upload-trigger:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(99, 102, 241, 0.4);
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 2rem;
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .gallery-item {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            aspect-ratio: 4/5;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.8s ease;
        }

        .gallery-item:hover img {
            transform: scale(1.1);
        }

        .gallery-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, transparent 60%);
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 2rem;
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .gallery-item:hover .gallery-overlay {
            opacity: 1;
        }

        .gallery-overlay h3 {
            color: white;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            font-family: 'Playfair Display', serif;
        }

        .gallery-overlay p {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
            line-height: 1.4;
        }

        /* Upload Modal */
        .upload-modal {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(20px);
            z-index: 3000;
            display: none;
            align-items: center;
            justify-content: center;
        }

        .upload-modal.active {
            display: flex;
        }

        .upload-form-container {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 3rem;
            border-radius: 30px;
            width: 90%;
            max-width: 500px;
        }

        .upload-form-container h2 {
            color: white;
            font-family: 'Playfair Display', serif;
            margin-bottom: 2rem;
            text-align: center;
        }
    </style>
</head>

<main style="background-color: #0c0c0e; min-height: 100vh;">
    <header class="gallery-header-section">
        <h1>Gallery</h1>
        <p style="color: rgba(255, 255, 255, 0.4);">A curated collection of digital blueprints and art.</p>
    </header>

    <div class="gallery-actions">
        <button class="upload-trigger" onclick="toggleUploadModal()">Upload to Gallery</button>
    </div>

    <div class="gallery-grid">
        {{#each items}}
        <div class="gallery-item">
            <img src="{{this.image}}" alt="{{this.title}}">
            <div class="gallery-overlay">
                <h3>{{this.title}}</h3>
                <p>{{this.description}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</main>

<div id="gallery-upload-modal" class="upload-modal">
    <div class="upload-form-container">
        <h2>Upload New Piece</h2>
        <form action="/gallery/upload" method="POST" enctype="multipart/form-data">
            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label style="display: block; color: rgba(255,255,255,0.7); margin-bottom: 0.5rem;">Title</label>
                <input type="text" name="title" required
                    style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; color: white;">
            </div>
            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label style="display: block; color: rgba(255,255,255,0.7); margin-bottom: 0.5rem;">Description</label>
                <textarea name="description" rows="3"
                    style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; color: white;"></textarea>
            </div>
            <div class="form-group" style="margin-bottom: 2rem;">
                <label style="display: block; color: rgba(255,255,255,0.7); margin-bottom: 0.5rem;">Image File</label>
                <input type="file" name="image" accept="image/*" required
                    style="width: 100%; padding: 1rem; background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; color: white;">
            </div>
            <div style="display: flex; gap: 1rem;">
                <button type="submit" class="submit-btn" style="flex: 1; margin-top: 0;">Upload</button>
                <button type="button" onclick="toggleUploadModal()"
                    style="flex: 1; background: transparent; border: 1px solid rgba(255,255,255,0.1); color: white; border-radius: 12px; cursor: pointer;">Cancel</button>
            </div>
        </form>
    </div>
</div>

<script>
    function toggleUploadModal() {
        document.getElementById('gallery-upload-modal').classList.toggle('active');
    }
</script>