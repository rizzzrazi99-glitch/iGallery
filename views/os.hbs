<head>
    <link rel="stylesheet" href="/stylesheets/os.css">
</head>

<main id="gallery-container"
    style="opacity: 1 !important; visibility: visible !important; transform: translateY(0) !important; background-color: #0c0c0e;">


    <header class="gallery-header">
        <h2 class="reveal-text visible">Operating Systems</h2>
        <p class="reveal-text visible delay-1">Choose your distribution and select the appropriate installer image.</p>
    </header>

    <div class="os-layout">
        <!-- Sidebar Navigation -->
        <aside class="os-sidebar" id="os-sidebar">
            <!-- Populated by JS -->
        </aside>

        <!-- Main Content Area -->
        <section class="os-content">
            <div id="installer-container" class="kali-installer-container">
                <!-- Architecture Selection -->
                <div class="arch-selector" id="arch-selector">
                    <!-- Populated by JS -->
                </div>

                <!-- Installer Card -->
                <div class="kali-installer-card" id="os-card">
                    <div class="installer-card-header">
                        <div class="installer-info">
                            <span class="version-tag" id="os-version">Version 2024.4</span>
                            <h3 id="os-title">iGallery OS Installer</h3>
                        </div>
                        <div class="installer-icon" id="os-icon">
                            <!-- Populated by JS -->
                        </div>
                    </div>

                    <div class="installer-card-body">
                        <p id="os-description">Complete offline installer with everything you need for a fresh start.
                        </p>

                        <!-- Credentials Section -->
                        <div id="os-credentials" class="os-credentials" style="display: none;">
                            <div class="credential-item">
                                <span class="cred-label">Default User:</span>
                                <span id="cred-user" class="cred-value"></span>
                            </div>
                            <div class="credential-item">
                                <span class="cred-label">Password:</span>
                                <span id="cred-password" class="cred-value"></span>
                            </div>
                        </div>
                    </div>

                    <div class="installer-card-footer">
                        <a href="#" class="kali-btn-download" id="os-download-btn">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                stroke-linecap="round" stroke-linejoin="round">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                <polyline points="7 10 12 15 17 10"></polyline>
                                <line x1="12" y1="15" x2="12" y2="3"></line>
                            </svg>
                            Download
                        </a>
                        <div class="secondary-actions">
                            <a href="#" class="action-item" title="Torrent">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                    stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                                    <path d="M2 17l10 5 10-5"></path>
                                    <path d="M2 12l10 5 10-5"></path>
                                </svg>
                            </a>
                            <a href="#" class="action-item" title="SHA256Sum">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                    stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="16 3 21 3 21 8"></polyline>
                                    <line x1="4" y1="20" x2="21" y2="3"></line>
                                    <polyline points="21 16 21 21 16 21"></polyline>
                                    <line x1="15" y1="15" x2="21" y2="21"></line>
                                    <line x1="3" y1="21" x2="9" y2="15"></line>
                                    <line x1="3" y1="16" x2="3" y2="21" x2="8" y2="21"></line>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>

<script src="/javascripts/os-data.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const sidebar = document.getElementById('os-sidebar');
        const container = document.getElementById('installer-container');
        const archSelector = document.getElementById('arch-selector');
        const osTitle = document.getElementById('os-title');
        const osVersion = document.getElementById('os-version');
        const osDescription = document.getElementById('os-description');
        const osIcon = document.getElementById('os-icon');
        const osDownloadBtn = document.getElementById('os-download-btn');
        const mainContainer = document.getElementById('gallery-container');
        const osCredentials = document.getElementById('os-credentials');
        const credUser = document.getElementById('cred-user');
        const credPassword = document.getElementById('cred-password');

        let currentOS = 'kali';

        // Initialize Sidebar
        Object.keys(OS_DATA).forEach(key => {
            const data = OS_DATA[key];
            const item = document.createElement('div');
            item.className = `os-nav-item ${key === currentOS ? 'active' : ''}`;
            item.innerHTML = `
                <div class="os-nav-icon">${data.icon}</div>
                <div class="os-nav-name">${data.name}</div>
            `;
            item.addEventListener('click', () => switchOS(key));
            sidebar.appendChild(item);
        });

        function switchOS(key) {
            if (currentOS === key) return;

            currentOS = key;
            const data = OS_DATA[key];

            // Update UI State
            document.querySelectorAll('.os-nav-item').forEach(el => el.classList.remove('active'));
            sidebar.querySelector(`.os-nav-item:nth-child(${Object.keys(OS_DATA).indexOf(key) + 1})`).classList.add('active');

            // Set Accent Color
            mainContainer.style.setProperty('--os-accent', data.accent);

            // Animate Content Switch
            container.classList.remove('active');

            setTimeout(() => {
                osTitle.textContent = data.name + ' Installer';
                osVersion.textContent = 'Version ' + data.version;
                osDescription.textContent = data.description;
                osIcon.innerHTML = data.icon;

                // Update Credentials
                if (data.user && data.password) {
                    credUser.textContent = data.user;
                    credPassword.textContent = data.password;
                    osCredentials.style.display = 'flex';
                } else {
                    osCredentials.style.display = 'none';
                }

                // Update Arches
                archSelector.innerHTML = '';
                Object.keys(data.architectures).forEach((archKey, index) => {
                    const arch = data.architectures[archKey];
                    const btn = document.createElement('button');
                    btn.className = `arch-btn ${index === 0 ? 'active' : ''}`;
                    btn.innerHTML = `${arch.label} ${arch.note ? `<span>(${arch.note})</span>` : ''}`;
                    btn.addEventListener('click', () => {
                        document.querySelectorAll('.arch-btn').forEach(b => b.classList.remove('active'));
                        btn.classList.add('active');
                        osDownloadBtn.href = arch.download;
                    });
                    archSelector.appendChild(btn);
                    if (index === 0) osDownloadBtn.href = arch.download;
                });

                container.classList.add('active');
            }, 300);
        }

        // Initial Load
        switchOS('kali');
        container.classList.add('active');
    });
</script>